{
  "name": "smartodo-ce",
  "version": "1.0.0",
  "description": "SmartTodo Community Edition - A monorepo for todo management application",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/mobile/smarTODO",
    "apps/web/smartodo",
    "apps/supabase"
  ],
  "scripts": {
    "test": "lerna run test",
    "build": "lerna run build",
    "dev": "lerna run dev --parallel --stream",
    "dev:web": "lerna run dev --scope=smartodo-ce-web",
    "dev:mobile": "lerna run dev --scope=smartodo-ce-rn",
    "dev:supabase": "lerna run dev --scope=smartodo-supabase",
    "prepare": "husky",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "release": "lerna version --conventional-commits --yes"
  },
  "keywords": [
    "monorepo",
    "lerna",
    "todo",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "conventional-changelog-cli": "^5.0.0",
    "husky": "^9.1.7",
    "lerna": "^8.2.3",
    "lint-staged": "^16.1.4",
    "prettier": "^3.6.2",
    "supabase": "^2.33.9"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
